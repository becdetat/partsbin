@using partsbin.UiServices
@inject IPartUiService PartUiService;
@inject NavigationManager NavigationManager;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">partsbin</a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="." Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/all-parts">
                <span class="oi oi-box" aria-hidden="true"></span> All parts
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/rubbish-bin">
                <span class="oi oi-trash" aria-hidden="true"></span> Rubbish bin
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="AddPart">
                <span class="oi oi-plus" aria-hidden="true"></span> Add a part
            </NavLink>
\     </div>
    </nav>
</div>

