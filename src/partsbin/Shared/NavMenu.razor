@using partsbin.UiServices
@inject IPartUiService PartUiService;
@inject NavigationManager NavigationManager;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">partsbin</a>
        <a class="navbar-text"
           href="https://partsbin.page"
           title="partsbin home page on the internet"
           target="_blank">
            about
        </a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="." Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/all-parts">
                <span class="oi oi-box" aria-hidden="true"></span> All parts
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/part-types">
                <span class="oi oi-box" aria-hidden="true"></span> Part types
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/ranges">
                <span class="oi oi-box" aria-hidden="true"></span> Ranges
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/part-names">
                <span class="oi oi-box" aria-hidden="true"></span> Part names
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/manufacturers">
                <span class="oi oi-box" aria-hidden="true"></span> Manufacturers
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/locations">
                <span class="oi oi-box" aria-hidden="true"></span> Locations
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/rubbish-bin">
                <span class="oi oi-trash" aria-hidden="true"></span> Rubbish bin
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="AddPart">
                <span class="oi oi-plus" aria-hidden="true"></span> Add a part
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private async void AddPart()
    {
        await PartUiService.AddPart();
    }
}